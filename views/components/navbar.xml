<odoo>
  <template id="custom_header" inherit_id="website.layout" name="Custom Header">
    <xpath expr="//header" position="replace">
      <header class="sticky top-0 z-50 bg-white shadow-sm">
        <nav class="container mx-auto px-6 py-4">
          <div class="flex items-center justify-between">
            <!-- Logo -->
            <div class="flex-shrink-0">
              <a href="/" class="flex items-center">
                <img src="/parakarsa/static/src/img/logo.png" alt="Parakarsa" class="h-12 w-auto"/>
              </a>
            </div>

            <!-- Desktop Menu -->
            <div class="hidden md:flex items-center space-x-8">
              <a href="/" class="text-gray-700 hover:text-green-800 font-medium transition-colors">Home</a>
              <a href="/about" class="text-gray-700 hover:text-green-800 font-medium transition-colors">About Us</a>
              <a href="/services" class="text-gray-700 hover:text-green-800 font-medium transition-colors">Services</a>
              <a href="/contact" class="text-gray-700 hover:text-green-800 font-medium transition-colors">Contact</a>
            </div>

            <!-- CTA Button -->
            <div class="hidden md:block">
              <a href="/contact" class="px-6 py-2.5 bg-green-800 text-white font-semibold rounded-lg hover:bg-green-900 transition-colors shadow-md">
                Get Started
              </a>
            </div>

            <!-- Mobile Menu Button (Basic) -->
            <div class="md:hidden flex items-center">
              <button class="text-gray-700 hover:text-green-800 focus:outline-none">
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
              </button>
            </div>
          </div>
        </nav>
      </header>
    </xpath>
  </template>
</odoo>
