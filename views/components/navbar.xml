<odoo>
  <template id="custom_header" inherit_id="website.layout" name="Custom Header">
    <xpath expr="//header" position="replace">
      <link rel="preconnect" href="https://fonts.googleapis.com"/>
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous"/>
      <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&amp;display=swap" rel="stylesheet"/>
      
      <header id="parakarsa-navbar" class="sticky-top bg-white shadow-sm">
        <style>
          #parakarsa-navbar {
            font-family: 'Poppins', sans-serif;
            background-color: #ffffff;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
          }
          .custom-container {
            max-width: 1440px;
            margin: 0 auto;
            padding: 0 1.5rem;
          }
          /* Top Bar Styles */
          .top-bar {
            background-color: #f9fafb; /* bg-gray-50 */
            border-bottom: 1px solid #f3f4f6; /* border-gray-100 */
          }
          .top-bar-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.5rem 0;
          }
          .top-input-wrapper {
             position: relative;
             flex: 1;
             max-width: 32rem; /* max-w-lg */
             margin: 0 2rem;
          }
          .top-search-input {
             width: 100%;
             background-color: white;
             border: 1px solid #e5e7eb;
             border-radius: 9999px;
             padding: 0.5rem 1rem 0.5rem 1rem;
             padding-right: 2.5rem;
             font-size: 0.875rem;
             color: #374151;
             outline: none;
          }
          .top-search-input:focus {
             border-color: #166534; /* ring-primary currently mocked as border change */
             box-shadow: 0 0 0 1px rgba(22, 101, 52, 0.5);
          }
          
          /* Navbar Main Content */
          .navbar-content {
            height: 80px; /* h-20 */
            display: flex;
            justify-content: space-between;
            align-items: center;
          }
          
          /* Navigation Links */
          .nav-link-custom {
            font-size: 1rem; /* text-base */
            font-weight: 500;
            color: #4b5563; /* text-gray-600 */
            text-decoration: none !important;
            display: flex;
            align-items: center;
            transition: color 0.2s;
            cursor: pointer;
            padding: 0.5rem 0;
            height: 100%;
            border-bottom: 2px solid transparent;
          }
          .nav-link-custom:hover {
            color: #166534; /* text-primary */
            border-bottom-color: rgba(22, 101, 52, 0.5);
            text-decoration: none !important;
          }
          .nav-link-custom.active {
            font-weight: 700;
            color: #000000;
            border-bottom-color: #166534;
            text-decoration: none !important;
          }
          
          /* Mega Menu */
          .mega-menu-container {
             position: absolute;
             left: 50%;
             right: 50%;
             margin-left: -50vw;
             margin-right: -50vw;
             width: 100vw;
             top: 100%;
             background-color: white;
             border-top: 1px solid #f3f4f6;
             box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
             opacity: 0;
             visibility: hidden;
             transform: translateY(10px);
             transition: all 0.3s;
             z-index: 50;
          }
          .nav-group:hover .mega-menu-container {
             opacity: 1;
             visibility: visible;
             transform: translateY(0);
          }
          .mega-menu-grid {
             display: grid;
             grid-template-columns: repeat(3, 1fr);
             column-gap: 0.5rem;
             row-gap: 0.5rem;
          }
          .mega-menu-item {
             display: block;
             padding: 1rem;
             border-radius: 0.5rem;
             text-decoration: none !important;
             transition: background-color 0.15s;
          }
          .mega-menu-item:hover {
             background-color: #f9fafb;
             text-decoration: none !important;
          }
          .mega-menu-title {
             display: flex;
             justify-content: space-between;
             align-items: center;
             font-weight: 700;
             font-size: 1rem;
             color: #1f2937;
             transition: color 0.15s;
          }
          .mega-menu-item:hover .mega-menu-title {
             color: #166534;
          }
          .mega-menu-desc {
             font-size: 0.875rem;
             color: #6b7280;
             margin-top: 0.25rem;
             display: -webkit-box;
             -webkit-line-clamp: 2;
             -webkit-box-orient: vertical;
             overflow: hidden;
          }
          
          /* Buttons */
          .btn-login {
            background-color: #166534;
            color: #ffffff !important;
            padding: 0.625rem 2rem; /* py-2.5 px-8 */
            border-radius: 9999px;
            font-size: 0.875rem;
            font-weight: 500;
            text-decoration: none;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            transition: background-color 0.15s;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
          }
          .btn-login:hover {
            background-color: #14532d;
            color: #ffffff !important;
          }

          /* General Utils */
          .rotate-chevron {
             transition: transform 0.2s;
          }
          .nav-group:hover .rotate-chevron {
             transform: rotate(180deg);
          }
          .text-secondary-custom {
             color: #6b7280; /* Adjust secondary text color */
          }
          
          /* Mobile Menu Styles */
          #mobile-menu-dropdown {
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            height: calc(100vh - 5rem); /* Adjusted for h-20 navbar */
            background: white;
            z-index: 999;
            border-top: 1px solid #f3f4f6;
            overflow-y: auto;
          }
        </style>

